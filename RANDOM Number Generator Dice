print("Infinity Dice Game")
import random
print()
def rollDice(sides):
  while True:
    roll = random.randint(1,sides)
    print("You rolled",roll)
    print()
    again = input("Roll again? ")
    if again == "yes":
      continue
    else:
      break
sides = int(input("How many sides? "))
rollDice(sides)
